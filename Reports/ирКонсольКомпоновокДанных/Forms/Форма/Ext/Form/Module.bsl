	КонецЕсли; 
	КопияМакета = ирОбщий.ПолучитьКопиюОбъектаЛкс(мМакетКомпоновкиДанных);
	ЭлементыФормы.МакетаКомпоновкиПлоский.Очистить();
	Попытка
		ОбластьМакета = ПолучитьПредставлениеМакетовИТелаМакетаКомпоновкиДанных(,, КопияМакета).Область();
	Исключение
		// http://devtool1c.ucoz.ru/forum/2-998-1
		ОбластьМакета = ОписаниеОшибки();
	КонецПопытки; 
	Если ТипЗнч(ОбластьМакета) = Тип("Строка") Тогда
		ЭлементыФормы.МакетаКомпоновкиПлоский.Область(1,1).Текст = ОбластьМакета;
	Иначе
		ЭлементыФормы.МакетаКомпоновкиПлоский.ВставитьОбласть(ОбластьМакета);
	КонецЕсли; 
	Попытка
		ТекстМакета = ирОбщий.СохранитьОбъектВВидеСтрокиXMLЛкс(мМакетКомпоновкиДанных);
	Исключение
		ТекстМакета = ОписаниеОшибки();
	КонецПопытки; 
	ЭлементыФормы.МакетКомпоновкиXML.УстановитьТекст(ТекстМакета);

