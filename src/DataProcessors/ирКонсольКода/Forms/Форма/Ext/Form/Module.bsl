Процедура ПередЗакрытием(Отказ, СтандартнаяОбработка)
	
	#Если Сервер И Не Сервер Тогда
		ПолеТекстаАлгоритма = Обработки.ирКлсПолеТекстаПрограммы.Создать();
	#КонецЕсли
	Если Не ПолеТекстаАлгоритма.ЛиМожноЗакрытьФорму() Тогда 
		Отказ = Истина;
		Возврат;
	КонецЕсли; 
	Ответ = ирОбщий.ЗапроситьСохранениеДанныхФормыЛкс(ЭтаФорма);
	Если Ответ = КодВозвратаДиалога.Да Тогда
		Если Не СохранитьВФайл() Тогда 
			Возврат;
		КонецЕсли; 
	КонецЕсли; 
	Отказ = Ответ = КодВозвратаДиалога.Отмена;
	Если Не Отказ Тогда
		РедакторHTML = РедакторHTML();
		Если РедакторHTML <> Неопределено Тогда
			РедакторHTML.version1C = ""; // Предотвращаем повторное удаление обработчика https://www.hostedredmine.com/issues/936924
			УдалитьОбработчик РедакторHTML.onclick, ЭтаФорма.РедакторHTMLonclick; // Антибаг платформы. Иначе при следующем вызове ДобавитьОбработчик будет аварийное завершение https://www.hostedredmine.com/issues/937045
		КонецЕсли; 
	КонецЕсли; 
	
