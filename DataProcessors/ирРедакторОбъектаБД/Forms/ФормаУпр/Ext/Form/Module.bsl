КонецПроцедуры
	
Процедура ИмяОсновнойТаблицыПриИзменении()
	
	ЭлементыФормы = Элементы;
	Элемент = ЭлементыФормы.ИмяОсновнойТаблицы;
	ирПлатформа = ирКэш.Получить();
	#Если Сервер И Не Сервер Тогда
	    ирПлатформа = Обработки.ирПлатформа.Создать();
	#КонецЕсли
	фОбъект.мПолноеИмяМД = "";
	Если Найти(фОбъект.ИмяОсновнойТаблицы, ".") = 0 Тогда
		Если фОбъект.ИмяОсновнойТаблицы = "Константы" Тогда
			Сообщить("Работа с константами в режиме совместимости 8.2.13- не поддерживается");
		КонецЕсли; 
		фОбъект.ИмяОсновнойТаблицы = "";
	КонецЕсли; 
	ирОбщий.УстановитьГотовностьДанныхСтраницыЛкс(ЭтаФорма, ЭлементыФормы.ПанельОсновная.ПодчиненныеЭлементы.СтраницаСвязанныеДанные, Ложь);
	ЭлементыФормы.ПанельОсновная.Доступность = ЗначениеЗаполнено(фОбъект.ИмяОсновнойТаблицы);
	мМетаданныеОбъекта = ирОбщий.НайтиОбъектМетаданныхПоПолномуИмениТаблицыБДЛкс(фОбъект.ИмяОсновнойТаблицы, Истина);
	Если мМетаданныеОбъекта = Неопределено Тогда
		Если ЗначениеЗаполнено(фОбъект.ИмяОсновнойТаблицы) Тогда
			Сообщить("Таблица " + фОбъект.ИмяОсновнойТаблицы + " не найдена в конфигурации");
			фОбъект.ИмяОсновнойТаблицы = Неопределено;
		КонецЕсли; 
	Иначе
		фОбъект.мПолноеИмяМД = мМетаданныеОбъекта.ПолноеИмя();
	КонецЕсли; 
	ЭтаФорма.фОбъект.ТипОсновнойТаблицы = ирОбщий.ПолучитьТипТаблицыБДЛкс(фОбъект.ИмяОсновнойТаблицы);
	фОбъект.ЭтоСсылочныйОбъект = Ложь
		Или ирОбщий.ЛиКорневойТипСсылкиЛкс(фОбъект.ТипОсновнойТаблицы) 
		Или (Истина
			И фОбъект.ТипОсновнойТаблицы = "Внешняя"
			И мМетаданныеОбъекта.ТипДанныхТаблицы = Метаданные.СвойстваОбъектов.ТипДанныхТаблицыВнешнегоИсточникаДанных.ОбъектныеДанные);
	фОбъект.ЭтоКонстанта = ирОбщий.ЛиКорневойТипКонстантыЛкс(фОбъект.ТипОсновнойТаблицы);
	фОбъект.ЭтоНаборЗаписей = ирОбщий.ЛиКорневойТипРегистраБДЛкс(фОбъект.ТипОсновнойТаблицы);
	фОбъект.ЭтоПланОбмена = ирОбщий.ЛиКорневойТипПланаОбменаЛкс(фОбъект.ТипОсновнойТаблицы);
	фОбъект.ЭтоДокумент = ирОбщий.ЛиКорневойТипДокументаЛкс(фОбъект.ТипОсновнойТаблицы);
	фОбъект.ЭтоМетаСсылка = ирОбщий.ЛиТипТаблицыМетассылкиЛкс(фОбъект.ТипОсновнойТаблицы);
	фОбъект.ЭтоВнешнийОбъект = фОбъект.ТипОсновнойТаблицы = "Внешняя";
	фОбъект.мРежимМенеджераЗаписи = Ложь;
	фОбъект.мСчитанНепустойНаборЗаписей = Ложь;
	фОбъект.ЭтоГруппа = Ложь;
	мПоляТаблицыБД = ПоляТаблицыБД();
	Если Не ЗначениеЗаполнено(фОбъект.ИмяОсновнойТаблицы) Тогда
		ЭлементыФормы.ПанельОсновная.ТекущаяСтраница = ЭлементыФормы.ПанельОсновная.ПодчиненныеЭлементы.СтраницаСвойстваОбъекта;
	КонецЕсли; 
	//ЭлементыФормы.ПанельОсновная.ПодчиненныеЭлементы.СтраницаСвойстваОбъекта.Видимость = Не фОбъект.ЭтоМетаСсылка;
	ЭлементыФОрмы.ПанельОсновная.ПодчиненныеЭлементы.СтраницаТабличныйДокумент.Видимость = Не фОбъект.ЭтоМетаСсылка;
	ЭлементыФОрмы.ПанельОсновная.ПодчиненныеЭлементы.СтраницаИзмененияНаУзлах.Видимость = Не фОбъект.ЭтоМетаСсылка;
	ЭлементыФОрмы.ПанельОсновная.ПодчиненныеЭлементы.СтраницаПоискВОбъекте.Видимость = Не фОбъект.ЭтоМетаСсылка;
	ЭлементыФормы.ПанельОбъект.ПодчиненныеЭлементы.СтраницаСтраницыПанельТабличныеЧасти.Видимость = фОбъект.ЭтоСсылочныйОбъект И Не фОбъект.ЭтоМетаСсылка И Не фОбъект.ЭтоВнешнийОбъект;
	
	// Упр
	РеквизитыФормы = ирСервер.ПолучитьТаблицуДочернихРеквизитовЛкс(ЭтаФорма, Истина);
	УдаляемыеРеквизиты = Новый Массив;
	Если РеквизитыФормы.Свойство("НаборЗаписей") Тогда
		УдаляемыеРеквизиты.Добавить("НаборЗаписей");
	КонецЕсли; 
	Если РеквизитыФормы.Свойство("СсылочныйОбъект") Тогда
		УдаляемыеРеквизиты.Добавить("СсылочныйОбъект");
	КонецЕсли; 
	ДобавляемыеРеквизиты = Новый Массив;
	ЭлементОформленияАктивность = ирОбщий.НайтиЭлементКоллекцииПоЗначениюСвойстваЛкс(УсловноеОформление.Элементы, "Представление", ПредставлениеЭлементаОформленияАктивности());
	Если ЭлементОформленияАктивность <> Неопределено Тогда
		УсловноеОформление.Элементы.Удалить(ЭлементОформленияАктивность);
	КонецЕсли;
	
	Если Ложь
		Или Не ЗначениеЗаполнено(фОбъект.ИмяОсновнойТаблицы) 
		Или фОбъект.ЭтоСсылочныйОбъект
	Тогда
		ЭлементыФормы.ПанельКлючОбъекта.ТекущаяСтраница = ЭлементыФормы.ПанельКлючОбъекта.ПодчиненныеЭлементы.СтраницаСсылка;
		ЭлементыФормы.ПанельОбъект.ПодчиненныеЭлементы.СтраницаРеквизитыТаблица.Видимость = Истина;
		ЭлементыФормы.ПанельОбъект.ПодчиненныеЭлементы.СтраницаНаборЗаписей.Видимость = Ложь;
		ЭлементыФормы.ПанельОбъект.ТекущаяСтраница = ЭлементыФормы.ПанельОбъект.ПодчиненныеЭлементы.СтраницаРеквизитыТаблица;
		Если ЗначениеЗаполнено(фОбъект.ИмяОсновнойТаблицы) Тогда
			// Упр
			ДобавляемыеРеквизиты.Добавить(Новый РеквизитФормы("СсылочныйОбъект", Новый ОписаниеТипов(ирОбщий.ИмяТипаИзПолногоИмениМДЛкс(фОбъект.мПолноеИмяМД, "Объект")),,, Истина));
			Для Каждого МетаТЧ Из мМетаданныеОбъекта.ТабличныеЧасти Цикл
				Для Каждого МетаРеквизит Из МетаТЧ.Реквизиты Цикл
					Если МетаРеквизит.Тип.СодержитТип(Тип("ХранилищеЗначения")) Тогда
						//УдаляемыеРеквизиты.Добавить(МетаРеквизит.Имя);
						//НовыйРеквизит = Новый РеквизитФормы(МетаРеквизит.Имя, Новый ОписаниеТипов, "СсылочныйОбъект." + МетаТЧ.Имя, МетаРеквизит.Представление(), Истина);
						НовыйРеквизит = Новый РеквизитФормы(ИмяРеквизитаФормыИзДоступногоПоля(МетаРеквизит), Новый ОписаниеТипов, "СсылочныйОбъект." + МетаТЧ.Имя, МетаРеквизит.Представление(), Истина);
						ДобавляемыеРеквизиты.Добавить(НовыйРеквизит);
					КонецЕсли; 
				КонецЦикла;
			КонецЦикла; 
			ИзменитьРеквизиты(ДобавляемыеРеквизиты, УдаляемыеРеквизиты);
			// Заново надо брать ссылки на реквизиты формы https://partners.v8.1c.ru/forum/t/1641686/m/1641686
			
			Если фОбъект.ТипОсновнойТаблицы = "Внешняя" Тогда
				Фрагменты = ирОбщий.ПолучитьМассивИзСтрокиСРазделителемЛкс(фОбъект.ИмяОсновнойТаблицы);
				Фрагменты[0] = Фрагменты[0] + "ТаблицаСсылка";
				Если Фрагменты.Количество() > 3 Тогда
					Фрагменты.Удалить(2);
				КонецЕсли; 
				ИмяТипаСсылки = ирОбщий.ПолучитьСтрокуСРазделителемИзМассиваЛкс(Фрагменты, ".");
			Иначе
				ИмяТипаСсылки = ирОбщий.ИмяТипаИзПолногоИмениТаблицыБДЛкс(фОбъект.ИмяОсновнойТаблицы);
			КонецЕсли; 
			ЭлементыФормы.ВыбОбъект.ОграничениеТипа = Новый ОписаниеТипов(ИмяТипаСсылки);
			фОбъект.ВыбОбъект = ЭлементыФормы.ВыбОбъект.ОграничениеТипа.ПривестиЗначение(фОбъект.ВыбОбъект);
		Иначе
			ЭлементыФормы.ВыбОбъект.ОграничениеТипа = Новый ОписаниеТипов;
			фОбъект.ВыбОбъект = "";
		КонецЕсли; 
		ОбновитьТипЗначенияСсылки();
		ПодготовитьСтраницыДвижений(фОбъект.ВыбОбъект);
		ПодготовитьСтраницыТабличныхЧастей();
	ИначеЕсли фОбъект.ЭтоКонстанта Тогда
		ЭлементыФормы.ПанельКлючОбъекта.ТекущаяСтраница = ЭлементыФормы.ПанельКлючОбъекта.ПодчиненныеЭлементы.СтраницаКонстанта;
		ЭлементыФормы.ПанельОбъект.ПодчиненныеЭлементы.СтраницаРеквизитыТаблица.Видимость = Истина;
		ЭлементыФормы.ПанельОбъект.ПодчиненныеЭлементы.СтраницаНаборЗаписей.Видимость = Ложь;
		ЭлементыФормы.ПанельОбъект.ТекущаяСтраница = ЭлементыФормы.ПанельОбъект.ПодчиненныеЭлементы.СтраницаРеквизитыТаблица;
	Иначе
		// Упр
		ДобавляемыеРеквизиты.Добавить(Новый РеквизитФормы("НаборЗаписей", Новый ОписаниеТипов(ирОбщий.ИмяТипаИзПолногоИмениМДЛкс(фОбъект.мПолноеИмяМД, "НаборЗаписей")),,, Истина));
		Для Каждого ПолеТаблицы Из ПоляТаблицыБД() Цикл
			Если ПолеТаблицы.ТипЗначения.СодержитТип(Тип("ХранилищеЗначения")) Тогда
				//УдаляемыеРеквизиты.Добавить(ПолеТаблицы.Имя);
				НовыйРеквизит = Новый РеквизитФормы(ИмяРеквизитаФормыИзДоступногоПоля(ПолеТаблицы), Новый ОписаниеТипов, "НаборЗаписей", ПолеТаблицы.Заголовок, Истина);
				ДобавляемыеРеквизиты.Добавить(НовыйРеквизит);
			КонецЕсли; 
			Если ПолеТаблицы.Имя = "Активность" Тогда
				ЭлементОформления = УсловноеОформление.Элементы.Добавить();
				ЭлементОформления.Представление = ПредставлениеЭлементаОформленияАктивности();
				ЭлементОформления.Поля.Элементы.Добавить().Поле = Новый ПолеКомпоновкиДанных("НаборЗаписей");
				ирОбщий.НайтиДобавитьЭлементОтбораКомпоновкиЛкс(ЭлементОформления.Отбор, "НаборЗаписей.Активность", Ложь);
				ЭлементОформления.Оформление.УстановитьЗначениеПараметра("ЦветТекста", ирОбщий.ЦветТекстаНеактивностиЛкс());
			КонецЕсли; 
		КонецЦикла;
		ИзменитьРеквизиты(ДобавляемыеРеквизиты, УдаляемыеРеквизиты);
		Элементы.Таблица_НаборЗаписей_Образец.Видимость = Истина;
		СтараяТаблицаНабора = Элементы.Найти("НаборЗаписей");
		Если СтараяТаблицаНабора <> Неопределено Тогда
			Элементы.Удалить(СтараяТаблицаНабора);
		КонецЕсли; 
		ТабличноеПолеНаборЗаписей = ЭлементыФормы.Добавить("НаборЗаписей", Тип("ТаблицаФормы"), Элементы.Таблица_НаборЗаписей_Образец.Родитель);
		ТабличноеПолеНаборЗаписей.ПутьКДанным = "НаборЗаписей";
		ТабличноеПолеНаборЗаписей.УстановитьДействие("ПриИзменении", "НаборЗаписейПриИзменении");
		ТабличноеПолеНаборЗаписей.УстановитьДействие("ПриАктивизацииСтроки", "ТаблицаСРедакторомПриАктивизацииСтроки");
		ирОбщий.СкопироватьКнопкиКоманднойПанелиУправляемойФормыЛкс(Элементы.Таблица_НаборЗаписей_Образец.КоманднаяПанель, ТабличноеПолеНаборЗаписей.КоманднаяПанель, "НаборЗаписей");
		Элементы.Таблица_НаборЗаписей_Образец.Видимость = Ложь;
		
		ЭлементыФормы.ПанельКлючОбъекта.ТекущаяСтраница = ЭлементыФормы.ПанельКлючОбъекта.ПодчиненныеЭлементы.СтраницаОтбор;
		//ЭлементыФормы.ПанельОбъект.ПодчиненныеЭлементы.СтраницаНаборЗаписей.Видимость = Истина;
		//ЭлементыФормы.ПанельОбъект.ПодчиненныеЭлементы.СтраницаРеквизитыТаблица.Видимость = Ложь;
		//ЭлементыФормы.ПанельОбъект.ТекущаяСтраница = ЭлементыФормы.ПанельОбъект.ПодчиненныеЭлементы.СтраницаНаборЗаписей;
		ТаблицаОтбора.Очистить();
		ЭтаФорма.НаборЗаписей.Очистить();
		СтруктураОбъекта = ирОбщий.ОбъектБДПоКлючуЛкс(фОбъект.ИмяОсновнойТаблицы, Новый Структура,, Ложь, ОбъектыНаСервере());
		ПостроительИзмененийТаблицы = ПолучитьПостроительИзмененийТаблицы();
		#Если Сервер И Не Сервер Тогда
			ПостроительИзмененийТаблицы = Новый ПостроительЗапроса;
		#КонецЕсли
		Для Каждого ЭлементОтбора Из СтруктураОбъекта.Методы.Отбор Цикл
			СтрокаТаблицы = ТаблицаОтбора.Добавить();
			СтрокаТаблицы.ИмяПоля = ЭлементОтбора.Имя;
			СтрокаТаблицы.ПредставлениеПоля = ЭлементОтбора.Представление;
			СтрокаТаблицы.Использование = Истина;
			СтрокаТаблицы.ОписаниеТипов = ЭлементОтбора.ТипЗначения;
			СтрокаТаблицы.Значение = СтрокаТаблицы.ОписаниеТипов.ПривестиЗначение();
			ОбновитьТипЗначенияВСтрокеОтбора(СтрокаТаблицы);
			МетаданныеПоля = мПоляТаблицыБД.Найти(ЭлементОтбора.Имя, "Имя").Метаданные;
			Если МетаданныеПоля <> Неопределено Тогда
				СтрокаТаблицы.Подсказка = МетаданныеПоля.Подсказка;
			КонецЕсли; 
			Если ПостроительИзмененийТаблицы <> Неопределено Тогда
				СтрокаТаблицы.РегистрацияИзменений = ПостроительИзмененийТаблицы.ДоступныеПоля.Найти(ЭлементОтбора.Имя) <> Неопределено;
			КонецЕсли; 
		КонецЦикла;
		ПриИзмененииОтбораНабораЗаписей();
		ЭлементыФормы.ТаблицаОтбора.ПодчиненныеЭлементы.ТаблицаОтбораИспользование.ТолькоПросмотр = Ложь
			Или Не ирОбщий.ЛиКорневойТипРегистраСведенийЛкс(фОбъект.ТипОсновнойТаблицы)
			Или мМетаданныеОбъекта.РежимЗаписи = Метаданные.СвойстваОбъектов.РежимЗаписиРегистра.ПодчинениеРегистратору;
			
		// Упр
		ОбновитьСлужебныеДанныеФормы();
	КонецЕсли;
	фОбъект.мДоступноИзменение = Истина
		И ЗначениеЗаполнено(фОбъект.ИмяОсновнойТаблицы)
		И Не фОбъект.ЭтоМетаСсылка
		И (Ложь
			Или Не фОбъект.ЭтоВнешнийОбъект
			Или Не мМетаданныеОбъекта.ТолькоЧтение);
	ЭлементыФормы.ПанельОсновная.ПодчиненныеЭлементы.СтраницаСвязанныеДанные.Видимость = фОбъект.ЭтоСсылочныйОбъект;
	ЭлементыФормы.ПанельОсновная.ПодчиненныеЭлементы.СтраницаСсылкиНаОбъект.Видимость = фОбъект.ЭтоСсылочныйОбъект;
