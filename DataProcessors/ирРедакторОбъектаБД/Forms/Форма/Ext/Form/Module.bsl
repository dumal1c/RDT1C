	Если фОбъект.ЭтоСсылочныйОбъект Тогда
		КлючОбъекта = КлючОбъекта();
		Если Не фОбъект.ЭтоМетаСсылка И Не ЗначениеЗаполнено(КлючОбъекта) Тогда
			КлючОбъекта = фОбъект.ЭтоГруппа;
		КонецЕсли; 
