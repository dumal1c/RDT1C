	КонецЕсли; 
	КодУстановкиПараметра = КодУстановкиПараметра + ИмяПеременнойЗапроса + ".Параметры.Вставить(""" + СтрокаПараметра.ИмяПараметра + """, " + ТекстЗначения + "); " + КомментарийЗначения;
