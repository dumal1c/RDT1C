			СтрокаЗапроса.ТипЗапроса = мТекущаяСтрокаДереваЗапросов.ТипЗапроса;
		КонецЕсли; 
	КонецЕсли; 
	СтрокаЗапроса.СпособВыгрузки = 1;
	СтрокаЗапроса.ВыбратьВсеПоля = Истина;
	СтрокаЗапроса.АвтовыборкиИтогов = Истина;
